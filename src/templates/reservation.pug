extends _layout/layout

block variables
	- var title = 'Reservation'
	- var description = 'Description for Reservation page'
	- var bodyclass = 'Reservation'

block body
	section.page-reservation-header
		.container-fluid
			.row
				.col
					.page-text-reservation
						h5 MAKE AN ONLINE
						h2 Reservation
						p Or call us at +84 0384 352 620 any from
						h6 7:00 AM - 11:00 PM
	section.page-reservation-book-table
		.container
			.row
				.col-md-12
					.row.page-reservation-title
						.tt
							h5 BOOK A TABLE
					.row.page-reservation-text
						.col-sm-2
						.col-sm-8
							form
								.form-row
									.form-group.col-md-4.pr-1
										label(for='inputState') DATE
										input#datepicker.form-control.p-0(width='235px')
										script.
											$('#datepicker').datepicker({
											uiLibrary: 'bootstrap4'
											});
									.form-group.col-md-4.pl-2
										label(for='inputState') TIME
										input#datepicker1.form-control(width='235px')
										script.
											$('#datepicker1').timepicker({
											uiLibrary: 'bootstrap4'
											});
									.form-group.col-md-4.pl-2
										label(for='inputState') PARTY
										.input-group.input-group-reservation
											select#inputGroupSelect01.custom-select
												option(selected='') Choose...
												option(value="1") 1
												option(value="2") 2
												option(value="3") 3
												option(value="4") 4
												option(value="5") 5
												option(value="6") 6
												option(value="7") 7
												option(value="8") 8
												option(value="9") 9
											.input-group-icon
												i.fas.fa-glass-cheers
						.col-sm-2
			.row.pt-5
				.col-md-12
					.row.page-reservation-title
						.tt
							h5 CONTACT DETAILS
					.row.page-reservation-text
						.col-md-2
						.col-md-8
							form
								.form-row
									.form-group.col-md-4.pr-2
										label(for='inputCity') NAME
										.input-group.input-group-details
											input#inputCity.form-control(type='text')
											.input-group-icon
												i.fas.fa-signature
									.form-group.col-md-4.pl-2
										label(for='inputState') EMAIL
										.input-group.input-group-details
											input#inputCity.form-control(type='email')
											.input-group-icon
												i.far.fa-envelope
									.form-group.col-md-4.pl-2
										label(for='inputState') PHONE
										.input-group.input-group-details
											input#inputCity.form-control(type='number')
											.input-group-icon
												i.fas.fa-phone
								.form-row
									.form-group.w-100
										label(for='exampleFormControlTextarea1') ADD MESSAGE
										textarea#exampleFormControlTextarea1.form-control(rows='3' , col='12')
						.col-md-2
			.row.pt-5.pb-5
				.col-sm-2.offset-sm-5
					button.btn.btn-warning(type="button") REQUEST BOOKING

