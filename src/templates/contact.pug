extends _layout/layout

block variables
	- var title = 'Menu'
	- var description = 'Description for Menu page'
	- var bodyclass = 'Menu'

block body
	section.page-header-contact
		.container-fluid
			.row
				.col
					.page-text-reservation
						h5 DANNY'S
						h2 Contact us
						p.pt-5 Or call us at 00 40 555 1234 any day from
						h6 10:00 AM - 07:00 PM 
	section.contact-details
		.container
			.row
				.col
					.row
						.text-contact-detail
							h6 Contact Details
					.row.form-contact
						.col-md-8.offset-md-2
							form
								.form-row
									.form-group.col-md-4.pr-2
										label(for='inputCity') NAME
										.input-group.input-group-details
											input#inputCity.form-control(type='text')
											.input-group-icon
												i.fas.fa-signature
									.form-group.col-md-4.pl-2
										label(for='inputState') EMAIL
										.input-group.input-group-details
											input#inputCity.form-control(type='email')
											.input-group-icon
												i.far.fa-envelope
									.form-group.col-md-4.pl-2
										label(for='inputState') PHONE
										.input-group.input-group-details
											input#inputCity.form-control(type='number')
											.input-group-icon
												i.fas.fa-phone
								.form-row.pt-5
									.form-group.w-100
										label(for='exampleFormControlTextarea1') ADD MESSAGE
										textarea#exampleFormControlTextarea1.form-control(rows='7' , col='12')
					.row.pt-5.pb-5
						.col
							.page-send-mess
								button.btn.btn-warning(type="button") SEND MESSAGE
	section.map-contact
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.986034886734!2d106.7001562141167!3d10.812380261487233!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752894f672eaa9%3A0x41f28a9104de4347!2sOfficer+Academy+Ho+Chi+Minh+City!5e0!3m2!1sen!2s!4v1551414558092" width="100%" height="500px" frameborder="0" style="border:0" allowfullscreen></iframe>